{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "../../../sdk/dist/esm/blockchain-data",
    "rootDirs": ["src"],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    // "noEmit": true,
    "allowJs": false,
    "removeComments": false,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "composite": true,
    "paths": {
      "@imtbl/config": ["../../../config/src"],
      "@imtbl/generated-clients": ["../../../internal/generated-clients/src"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../config" },
    { "path": "../../internal/generated-clients" },
  ]
}
